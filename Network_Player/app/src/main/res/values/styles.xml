<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="homePosterItem">
        <item name="android:layout_width">@dimen/home_poster_item_width</item>
        <item name="android:layout_height">@dimen/home_poster_item_height</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="homeEntryItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/home_entry_item_height</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

</resources>
